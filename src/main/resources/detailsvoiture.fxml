<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<AnchorPane stylesheets="@style1.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Detailsvoiture" prefHeight="600.0" prefWidth="1200.0">
    <VBox spacing="15" layoutX="50.0" layoutY="50.0" alignment="CENTER">
        <Label fx:id="marqueLabel" text="Marque" />
        <Label fx:id="descriptionLabel" text="Description" />
        <Label fx:id="prixLabel" text="Prix" />

        <ImageView fx:id="imageView" fitWidth="300" fitHeight="200" />

        <Button fx:id="backButton" text="Back" onAction="#handleBack" />
    </VBox>

</AnchorPane>
