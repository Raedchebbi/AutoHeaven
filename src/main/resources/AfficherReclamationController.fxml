<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherReclamationController">

    <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="scroll-pane">
        <VBox prefWidth="1150" spacing="5" styleClass="container">

            <!-- En-tête -->
            <HBox styleClass="header-row">
                <Label prefHeight="42.0" prefWidth="165.0" styleClass="header-cell" text="Titre" />
                <Label prefHeight="42.0" prefWidth="272.0" styleClass="header-cell" text="Contenu" />
                <Label prefHeight="42.0" prefWidth="148.0" styleClass="header-cell" text="Date" />
                <Label prefHeight="42.0" prefWidth="142.0" styleClass="header-cell" text="Nom" />
                <Label prefHeight="42.0" prefWidth="119.0" styleClass="header-cell" text="Téléphone" />
                <Label prefHeight="42.0" prefWidth="161.0" styleClass="header-cell" text="Email" />
                <Label prefHeight="42.0" prefWidth="119.0" styleClass="header-cell" text="Statut" /> <!-- Colonne "Statut" -->
            </HBox>

            <!-- Contenu dynamique -->
            <VBox fx:id="contentBox" spacing="3" />

        </VBox>
    </ScrollPane>
</AnchorPane>
