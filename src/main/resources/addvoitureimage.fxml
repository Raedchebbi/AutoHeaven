<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" stylesheets="@style1.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Addvoitureimage">

    <children>
        <Label layoutX="164.0" layoutY="14.0" prefHeight="32.0" prefWidth="300.0" text="Formulaire d’Ajout de Voiture">
            <font>
                <Font size="22.0" />
            </font>
        </Label>

        <Label layoutX="29.0" layoutY="60.0" text="Marque :" />
        <TextField fx:id="marqueTextField" layoutX="193.0" layoutY="56.0" />
        <Label fx:id="errorMarque" layoutX="193.0" layoutY="80.0" textFill="RED" />

        <Label layoutX="29.0" layoutY="100.0" text="Description :" />
        <TextField fx:id="descriptionTextField" layoutX="193.0" layoutY="96.0" />
        <Label fx:id="errorDescription" layoutX="193.0" layoutY="120.0" textFill="RED" />

        <Label layoutX="29.0" layoutY="140.0" text="Kilométrage :" />
        <TextField fx:id="kilometrageTextField" layoutX="193.0" layoutY="136.0" />
        <Label fx:id="errorKilometrage" layoutX="193.0" layoutY="160.0" textFill="RED" />

        <Label layoutX="29.0" layoutY="180.0" text="Couleur :" />
        <TextField fx:id="couleurTextField" layoutX="193.0" layoutY="176.0" />
        <Label fx:id="errorCouleur" layoutX="193.0" layoutY="200.0" textFill="RED" />

        <Label layoutX="29.0" layoutY="220.0" text="Prix :" />
        <TextField fx:id="prixTextField" layoutX="193.0" layoutY="216.0" />
        <Label fx:id="errorPrix" layoutX="193.0" layoutY="240.0" textFill="RED" />

        <Label layoutX="29.0" layoutY="260.0" text="Image :" />
        <Button fx:id="imageButton" layoutX="193.0" layoutY="256.0" text="Choisir une image" onAction="#handleImageSelection"/>
        <ImageView fx:id="imageView" layoutX="350.0" layoutY="250.0" fitHeight="100.0" fitWidth="150.0" />

        <Label layoutX="29.0" layoutY="300.0" text="Disponibilité :" />
        <TextField fx:id="disponibleTextField" layoutX="193.0" layoutY="296.0" />
        <Label fx:id="errorDisponible" layoutX="193.0" layoutY="320.0" textFill="RED" />

        <Label layoutX="29.0" layoutY="340.0" text="ID Catégorie :" />
        <TextField fx:id="idCategorieTextField" layoutX="193.0" layoutY="336.0" />
        <Label fx:id="errorIdCategorie" layoutX="193.0" layoutY="360.0" textFill="RED" />

        <Button fx:id="ajouterButton" layoutX="534.0" layoutY="400.0" mnemonicParsing="false" text="Ajouter" onAction="#handleAjouterVoiture" />
    </children>

</AnchorPane>
