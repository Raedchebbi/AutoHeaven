<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0"
            prefWidth="600.0"
            stylesheets="@AddReservationStyle.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AddReservation">

    <children>
        <Label layoutX="167.0" layoutY="43.0" prefHeight="32.0" prefWidth="282.0" text="Formulaire de Réservation">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <Label layoutX="195.0" layoutY="102.0" text="User ID :">
         <font>
            <Font size="18.0" />
         </font></Label>
        <TextField fx:id="userIdTextField" layoutX="278.0" layoutY="95.0" />

        <Label layoutX="173.0" layoutY="157.0" prefHeight="27.0" prefWidth="101.0" text="Voiture ID :">
         <font>
            <Font size="18.0" />
         </font></Label>
        <TextField fx:id="voitureIdTextField" layoutX="278.0" layoutY="150.0" />

        <Label layoutX="93.0" layoutY="221.0" text="Date de Réservation :">
         <font>
            <Font size="18.0" />
         </font></Label>
        <DatePicker fx:id="datePicker" layoutX="278.0" layoutY="203.0" />

        <Button fx:id="ajouterButton" layoutX="253.0" layoutY="283.0" mnemonicParsing="false" onAction="#handleAjouterReservation" text="Ajouter" />
    </children>

</AnchorPane>
