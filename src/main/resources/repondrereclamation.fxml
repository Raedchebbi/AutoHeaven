<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@repondrereclamation.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.repondre_rec_controller">

   <children>
      <Label layoutX="190.0" layoutY="23.0" text="Répondre à la réclamation">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>

      <Label layoutX="30.0" layoutY="78.0" text="Titre :" />
      <TextField fx:id="titreField" editable="false" layoutX="200.0" layoutY="75.0" prefWidth="350.0" />

      <Label layoutX="30.0" layoutY="134.0" text="Contenu :" />
      <TextArea fx:id="contenuField" editable="false" layoutX="200.0" layoutY="136.0" prefHeight="100.0" prefWidth="350.0" wrapText="true" />

      <Label layoutX="30.0" layoutY="255.0" text="Réponse :" />
      <TextArea fx:id="reponseField" layoutX="200.0" layoutY="258.0" prefHeight="150.0" prefWidth="350.0" wrapText="true" />

      <Button layoutX="209.0" layoutY="403.0" onAction="#handleEnvoyerReponse" prefHeight="44.0" prefWidth="194.0" text="Envoyer Réponse" />
   </children>
</AnchorPane>
