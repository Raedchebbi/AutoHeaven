<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" stylesheets="@addreclamation.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.addreclamation_controller">

   <children>
      <!-- Conteneur principal avec une taille plus grande -->
      <VBox alignment="TOP_CENTER" layoutX="50" layoutY="50" spacing="25" styleClass="container">

         <Label styleClass="main-title" text="Formulaire de Réclamation" />

         <!-- Groupe Objet -->
         <VBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="form-label" text="Objet :" />
            <TextField fx:id="objetTextField" prefHeight="66.0" prefWidth="514.0" styleClass="text-field" />
            <Label fx:id="erreurObjet" styleClass="error-label" />
         </VBox>

         <!-- Groupe Réclamation -->
         <VBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="form-label" text="Votre Réclamation :" />
            <TextArea fx:id="reclamationTextArea" styleClass="text-area" />
            <Label fx:id="erreurReclamation" styleClass="error-label" />
         </VBox>

         <!-- Bouton -->
         <Button onAction="#handleEnvoyerReclamation" styleClass="button" text="Envoyer Réclamation" />
      </VBox>
   </children>
</AnchorPane>
