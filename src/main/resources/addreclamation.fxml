<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@addreclamation.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.addreclamation_controller">

   <children>
      <!-- Conteneur principal -->
      <VBox alignment="TOP_CENTER" spacing="20" layoutX="150" layoutY="50"
            styleClass="container">

         <Label text="Formulaire de Réclamation" styleClass="main-title"/>

         <!-- Groupe Objet -->
         <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Objet :" styleClass="form-label"/>
            <TextField fx:id="objetTextField" styleClass="form-field"/>
            <Label fx:id="erreurObjet" styleClass="error-label"/>
         </VBox>

         <!-- Groupe Réclamation -->
         <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Votre Réclamation :" styleClass="form-label"/>
            <TextArea fx:id="reclamationTextArea" styleClass="form-area"/>
            <Label fx:id="erreurReclamation" styleClass="error-label"/>
         </VBox>

         <!-- Bouton -->
         <Button text="Envoyer Réclamation" onAction="#handleEnvoyerReclamation"
                 styleClass="btn-primary"/>
      </VBox>
   </children>
</AnchorPane>