<AnchorPane prefHeight="550.0" prefWidth="653.0" stylesheets="@Testsirine.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Sirine">
    <children>
        <ButtonBar layoutX="310.0" layoutY="56.0" prefHeight="40.0" prefWidth="200.0" />
        <Accordion layoutX="29.0" layoutY="29.0" />

        <!-- Label Note -->
        <Label fx:id="note" layoutX="68.0" layoutY="183.0" prefHeight="34.0" prefWidth="88.0" text="Note:">
            <font>
                <Font size="22.0" />
            </font>
        </Label>

        <!-- HBox pour les étoiles -->
        <HBox fx:id="hboxStars" layoutX="212.0" layoutY="179.0" spacing="5">
            <children>
                <Button fx:id="star1" prefHeight="43.0" prefWidth="69.0" style="-fx-font-size: 18px;" text="★" />
                <Button fx:id="star2" style="-fx-font-size: 18px;" text="★" />
                <Button fx:id="star3" style="-fx-font-size: 18px;" text="★" />
            </children>
        </HBox>

        <!-- Label Commentaire -->
        <Label layoutX="55.0" layoutY="258.0" text="Commentaire :">
            <font>
                <Font size="23.0" />
            </font>
        </Label>

        <!-- Date Picker -->
        <DatePicker fx:id="date" layoutX="215.0" layoutY="407.0" stylesheets="@Testsirine.css" />
        <Label layoutX="100.0" layoutY="412.0" text="Date :">
            <font>
                <Font size="23.0" />
            </font>
        </Label>

        <!-- TextArea Commentaire -->
        <TextArea fx:id="commentaire" layoutX="212.0" layoutY="234.0" prefHeight="103.0" prefWidth="254.0" styleClass="text-field" stylesheets="@Testsirine.css" />

        <!-- Boutons -->
        <Button fx:id="creer" layoutX="551.0" layoutY="477.0" mnemonicParsing="false" prefHeight="44.0" prefWidth="122.0" stylesheets="@Testsirine.css" text="Créer" />
        <Button fx:id="supprimer" layoutX="364.0" layoutY="477.0" mnemonicParsing="false" prefHeight="44.0" prefWidth="149.0" stylesheets="@Testsirine.css" text="Supprimer" />
        <Button fx:id="modifier" layoutX="191.0" layoutY="477.0" mnemonicParsing="false" prefHeight="48.0" prefWidth="142.0" stylesheets="@Testsirine.css" text="Modifier" />

        <!-- IdUser et IdVoiture -->
        <Label layoutX="68.0" layoutY="121.0" prefHeight="44.0" prefWidth="122.0" text="IdUser:">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <TextField fx:id="iduser" layoutX="219.0" layoutY="121.0" prefHeight="44.0" prefWidth="150.0" styleClass="label" stylesheets="@Testsirine.css" />
        <TextField fx:id="idvoiture" layoutX="219.0" layoutY="64.0" prefHeight="44.0" prefWidth="150.0" styleClass="label" stylesheets="@Testsirine.css" />
        <Label layoutX="68.0" layoutY="64.0" prefHeight="44.0" prefWidth="122.0" text="Idvoiture:">
            <font>
                <Font size="22.0" />
            </font>
        </Label>

        <!-- Titre de l'avis -->
        <Text layoutX="227.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-field" text="AVIS" textAlignment="CENTER" wrappingWidth="199.9999999999999">
            <font>
                <Font size="36.0" />
            </font>
        </Text>

        <!-- Bouton pour la liste -->
        <Button fx:id="list" layoutX="28.0" layoutY="477.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="114.0" stylesheets="@Testsirine.css" text="List" />

        <!-- Label Réponse -->
        <Label fx:id="reponse" layoutX="18.0" layoutY="345.0" prefHeight="40.0" prefWidth="669.0" text="Réponse:" />
    </children>
</AnchorPane>
