<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" stylesheets="@style1.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.modifiervoiture">

    <children>
        <Label layoutX="20.0" layoutY="150.0" text="Marque :" />
        <TextField fx:id="marqueTextField" layoutX="150.0" layoutY="146.0" />

        <Label layoutX="20.0" layoutY="194.0" text="Description :" />
        <TextField fx:id="descriptionTextField" layoutX="150.0" layoutY="190.0" />

        <Label layoutX="18.0" layoutY="242.0" text="Kilométrage :" />
        <TextField fx:id="kilometrageTextField" layoutX="150.0" layoutY="238.0" />

        <Label layoutX="20.0" layoutY="290.0" text="Couleur :" />
        <TextField fx:id="couleurTextField" layoutX="150.0" layoutY="286.0" />

        <Label layoutX="20.0" layoutY="330.0" text="Prix :" />
        <TextField fx:id="prixTextField" layoutX="150.0" layoutY="326.0" />

        <Label layoutX="488.0" layoutY="250.0" text="Image :" />
        <Button fx:id="imageButton" layoutX="662.0" layoutY="380.0" onAction="#handleImageSelection" styleClass="delete-btn" stylesheets="@style1.css" text="Choisir une image" />
      <AnchorPane layoutX="610.0" layoutY="149.0" prefHeight="178.0" prefWidth="270.0" style="-fx-background-color: white;" styleClass="shadow" stylesheets="@style1.css">
         <children>
              <ImageView fx:id="imageView" fitHeight="178.0" fitWidth="275.0" />
         </children>
      </AnchorPane>


        <Label layoutX="16.0" layoutY="378.0" text="Disponibilité :" />
        <TextField fx:id="disponibiliteTextField" layoutX="150.0" layoutY="374.0" />

        <Label layoutX="19.0" layoutY="426.0" text="ID Catégorie :" />
        <TextField fx:id="idCategorieTextField" layoutX="150.0" layoutY="422.0" />

        <Button fx:id="saveButton" layoutX="404.0" layoutY="491.0" onAction="#handleSaveModification" prefHeight="36.0" prefWidth="126.0" styleClass="add-btn" stylesheets="@style1.css" text="Save" />
      <Label alignment="TOP_LEFT" layoutX="423.0" layoutY="47.0" text="Formulaire modifier Voiture" textAlignment="JUSTIFY">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="1.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
