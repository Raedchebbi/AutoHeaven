<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane  prefHeight="400.0" prefWidth="500.0" stylesheets="@style1.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.modifiervoiture">

    <children>
        <Label text="Marque" layoutX="20.0" layoutY="20.0"/>
        <TextField fx:id="marqueTextField" layoutX="150.0" layoutY="20.0"/>

        <Label text="Description" layoutX="20.0" layoutY="60.0"/>
        <TextField fx:id="descriptionTextField" layoutX="150.0" layoutY="60.0"/>

        <Label text="Kilométrage" layoutX="20.0" layoutY="100.0"/>
        <TextField fx:id="kilometrageTextField" layoutX="150.0" layoutY="100.0"/>

        <Label text="Couleur" layoutX="20.0" layoutY="140.0"/>
        <TextField fx:id="couleurTextField" layoutX="150.0" layoutY="140.0"/>

        <Label text="Prix" layoutX="20.0" layoutY="180.0"/>
        <TextField fx:id="prixTextField" layoutX="150.0" layoutY="180.0"/>

        <Label text="Image" layoutX="20.0" layoutY="220.0"/>
        <Button fx:id="imageButton" layoutX="150.0" layoutY="220.0" text="Choisir une image" onAction="#handleImageSelection"/>
        <ImageView fx:id="imageView" layoutX="300.0" layoutY="220.0" fitHeight="100.0" fitWidth="150.0"/>


        <Label text="Disponibilité" layoutX="20.0" layoutY="260.0"/>
        <TextField fx:id="disponibiliteTextField" layoutX="150.0" layoutY="260.0"/>

        <Label text="ID Catégorie" layoutX="20.0" layoutY="300.0"/>
        <TextField fx:id="idCategorieTextField" layoutX="150.0" layoutY="300.0"/>

        <Button fx:id="saveButton" text="Save" layoutX="150.0" layoutY="350.0" onAction="#handleSaveModification"/>
    </children>
</AnchorPane>
