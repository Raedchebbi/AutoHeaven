            <children>
                <ScrollPane fx:id="scroll" prefHeight="473.0" prefWidth="826.0" styleClass="transparent" stylesheets="@equipclient.css">
                    <content>
                        <GridPane fx:id="grid" prefHeight="11.0" prefWidth="31.0">
