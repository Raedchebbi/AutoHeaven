<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" stylesheets="@style1.css" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.modifiercategorie">
    <children>
        <Label text="Type" layoutX="20.0" layoutY="20.0"/>
        <TextField fx:id="typeField" layoutX="100.0" layoutY="20.0"/>

        <Label text="Carburant" layoutX="20.0" layoutY="60.0"/>
        <TextField fx:id="carburantField" layoutX="100.0" layoutY="60.0"/>

        <Label text="Utilisation" layoutX="20.0" layoutY="100.0"/>
        <TextField fx:id="utilisationField" layoutX="100.0" layoutY="100.0"/>

        <Label text="Transmission" layoutX="20.0" layoutY="140.0"/>
        <TextField fx:id="transmissionField" layoutX="100.0" layoutY="140.0"/>

        <Label text="Portes" layoutX="20.0" layoutY="180.0"/>
        <TextField fx:id="portesField" layoutX="100.0" layoutY="180.0"/>

        <Button fx:id="saveButton"  text="Save" layoutX="150.0" layoutY="220.0" onAction="#handleSaveModification"/>
        <Button text="Cancel" layoutX="250.0" layoutY="220.0" onAction="#handleCancel"/>
    </children>
</AnchorPane>
